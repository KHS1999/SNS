<?xml version="1.0" encoding="UTF-8"?>
  <!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
  <mapper namespace="com.khs.sns.post.dao.PostDAO">
  	<insert id="PostDAO" parameterType="map">
  		INSERT INTO
  			`post`
  		(
  			
  			`content`
  			,`userId`
  			,`createdAt`
  			,`updatedAt`
  		)
  		VALUES
  		(
  			#{content}
  			,#{userId}
  			,now()
  			,now()
  		)	
  			
  	</insert>
  	</mapper>